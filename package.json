{
  "name": "respec.org",
  "version": "1.0.0",
  "description": "respec.org website and HTTP APIs",
  "main": "app.js",
  "repository": "git@github.com:marcoscaceres/respec.org.git",
  "author": "Marcos Caceres <marcos@marcosc.com>",
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.1.0",
    "morgan": "^1.10.0",
    "nanoid": "^3.1.20",
    "node-fetch": "^2.6.1",
    "serialize-error": "^8.0.1",
    "split2": "^3.2.2",
    "ucontent": "^2.0.0"
  },
  "scripts": {
    "start": "npm run update-data-sources && node --enable-source-maps build/app.js",
    "start:server": "pm2 start ecosystem.config.js --env production",
    "build": "tsc",
    "build:watch": "tsc -w",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "update-data-sources": "node build/scripts/update-data-sources.js"
  },
  "prettier": {
    "singleQuote": false,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "jest": {
    "testRegex": "/tests/.*\\.test\\.js$",
    "collectCoverageFrom": [
      "build/**"
    ],
    "coverageProvider": "v8",
    "transform": {}
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.25",
    "@types/node-fetch": "^2.5.8",
    "@types/split2": "^2.1.6",
    "jest": "^26.6.3",
    "typescript": "^4.1.3"
  }
}

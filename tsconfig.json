{
  "compilerOptions": {
    "allowJs": true,
    "maxNodeModuleJsDepth": 1,
    "target": "ESNext",
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitThis": true,
    "module": "esnext",
    "outDir": "build",
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "*.js",
    "*.ts",
    "routes",
    "scripts",
    "utils",
    "views",
    "@types"
  ]
}
